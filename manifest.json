{
  "manifest_version": 2,

  "name": "Sentry",
  "description": "This extension allows the user to inject and configure raven-js on any website.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts" : [{
    "js" : ["insertRaven.js"],
    "matches": ["http://*/*", "https://*/*"],
    "run_at": "document_start"
  }],
  "web_accessible_resources": ["raven.js"]
}
